<Window x:Class="AppTrombinoscope.Vue_AuthentificationGestionnaire"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTrombinoscope"
        mc:Ignorable="d"
        Title="Vue_AuthentificationGestionnaire" Height="450" Width="800">
    <Grid Background="#FF35896E">
        <Grid.RowDefinitions>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="184*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="397*"/>
            <ColumnDefinition Width="395*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Connexion" HorizontalAlignment="Right" Margin="0,0,69,10" VerticalAlignment="Bottom" Width="122" Height="20" Grid.Row="3" RenderTransformOrigin="0.747,0.6" Click="onConnexion"/>
        <Label Content="Mot de passe" HorizontalAlignment="Right" Margin="0,0,82,10" VerticalAlignment="Bottom" Height="26" Width="109" Foreground="White" FontWeight="Bold" Grid.Row="2"/>
        <Label Content="Nom d'utilisateur" Margin="0,0,69,10" VerticalAlignment="Bottom" Height="26" Foreground="White" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Right" Width="122"/>
        <Button Content="Annuler" HorizontalAlignment="Left" Margin="60,0,0,10" Width="120" Grid.Column="1" Grid.Row="3" Height="20" VerticalAlignment="Bottom" Click="onAnnuler"/>
        <TextBox x:Name="tb_utilisateur" HorizontalAlignment="Left" Height="23" Margin="60,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120" Grid.Column="1" Grid.Row="1"/>
        <PasswordBox x:Name="pb_mdp" Grid.Column="1" HorizontalAlignment="Left" Margin="60,14,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
