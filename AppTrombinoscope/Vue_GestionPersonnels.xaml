<Window x:Class="AppTrombinoscope.Vue_GestionPersonnels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTrombinoscope"
        mc:Ignorable="d"
        Title="Vue_GestionPersonnels" Height="450" Width="800">
    <Grid Background="#FF35896E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="184*"/>
            <RowDefinition Height="235*"/>
        </Grid.RowDefinitions>
        <Button Content="Enregistrer" HorizontalAlignment="Left" Margin="132,186,0,0" Grid.Row="1" VerticalAlignment="Top" Width="136" Height="33" Click="onEnregistrer"/>
        <Button Content="Annuler" Grid.Column="1" HorizontalAlignment="Left" Margin="155,186,0,0" Grid.Row="1" VerticalAlignment="Top" Width="136" Height="31" Click="onAnnuler"/>
        <Label Content="Choisir le service" HorizontalAlignment="Left" Margin="149,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Choisir la fonction" HorizontalAlignment="Left" Margin="155,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="1"/>
        <ListBox x:Name="liste_services" HorizontalAlignment="Left" Height="140" Margin="100,41,0,0" Grid.Row="1" VerticalAlignment="Top" Width="197"/>
        <ListBox x:Name="liste_fonctions" HorizontalAlignment="Left" Height="140" Margin="120,36,0,0" Grid.Row="1" VerticalAlignment="Top" Width="197" Grid.Column="1"/>
        <Button Content="Choisir une photo" HorizontalAlignment="Left" Margin="149,144,0,0" VerticalAlignment="Top" Width="112" Height="30" Click="onChoisirPhoto"/>
        <Label Content="Nom" HorizontalAlignment="Left" Margin="58,10,0,0" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="1.358,0.471"/>
        <Label Content="Téléphone" HorizontalAlignment="Left" Margin="58,103,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Prénom" HorizontalAlignment="Left" Margin="58,55,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="tb_nom" HorizontalAlignment="Left" Height="23" Margin="204,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_tel" HorizontalAlignment="Left" Height="23" Margin="204,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_prenom" HorizontalAlignment="Left" Height="23" Margin="204,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="image_profile" Grid.Column="1" HorizontalAlignment="Left" Height="116" Margin="155,30,0,0" VerticalAlignment="Top" Width="123"/>
    </Grid>
</Window>
